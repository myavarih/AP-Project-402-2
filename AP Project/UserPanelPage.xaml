<Page x:Class="AP_Project.UserPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:AP_Project"
      mc:Ignorable="d"
      Title="UserPage">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
            <TextBlock Name="Title" Text="Welcome" FontSize="17" FontWeight="Bold" Margin="0,10,0,20" HorizontalAlignment="Center"/>
            <Button Content="Profile" Width="200" Height="40" Margin="0,5" Click="Profile_Click"/>
            <Button Content="Search Restaurants" Width="200" Height="40" Margin="0,5" Click="SearchRestaurants_Click"/>
            <Button Content="Order History" Width="200" Height="40" Margin="0,5" Click="OrderHistory_Click"/>
            <Button Content="Complaints" Width="200" Height="40" Margin="0,5" Click="Complaints_Click"/>
        </StackPanel>
    </Grid>
</Page>
