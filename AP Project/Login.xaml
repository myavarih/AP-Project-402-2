<Page x:Class="AP_Project.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      Title="LoginPage">

    <Canvas Margin="0,0,0,167">
        <Label Name="UsernameLbl" Content="Username: " Canvas.Top="12" HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Center"/>
        <xctk:WatermarkTextBox x:Name="UsernameTxtBx" Watermark="Enter your Username" Height="25" RenderTransformOrigin="0.5,0.5" Width="159" Canvas.Left="96" Canvas.Top="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Name="UsenameLbl" Content="Password:" Canvas.Top="64" HorizontalAlignment="Center" Canvas.Left="10" VerticalAlignment="Top"/>
        <xctk:WatermarkTextBox x:Name="PasswordTxtBx" Watermark="Enter your Password" Height="25" RenderTransformOrigin="0.5,0.5" Width="159" Canvas.Left="96" Canvas.Top="64" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="Log In" Canvas.Left="78" Canvas.Top="118" Height="31" Width="132" HorizontalAlignment="Left" VerticalAlignment="Center" Click="LogInButton_Click" />
        <Button Content="User Sign Up" HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="Hand" Padding="0" BorderThickness="0" Background="Transparent" Canvas.Left="34" Canvas.Top="171" Click="UserSignUpBtnClick">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock Text="{TemplateBinding Content}" Foreground="Gray" TextDecorations="None">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Change Password" HorizontalAlignment="Left" VerticalAlignment="Center" Cursor="Hand" Padding="0" BorderThickness="0" Background="Transparent" Canvas.Left="157" Canvas.Top="171" Click="ChangePasswordBtnClick">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <TextBlock Text="{TemplateBinding Content}" Foreground="Gray" TextDecorations="None">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Canvas>
</Page>
